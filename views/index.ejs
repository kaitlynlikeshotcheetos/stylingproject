  <style>
      
    body, h1, h2, p, a {
      margin: 0;
      padding: 0;
      font-family: 'Kumbh Sans', sans-serif;
    }
    a {
      text-decoration: none;
      color: inherit;
    }

    body {
      font-size: 16px;
      color: hsl(220, 13%, 13%);
    }

    .container {
      max-width: 1440px;
      margin: auto;
      padding: 20px;
    }

    /* Navbar styling */
    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 1px solid hsl(220, 14%, 75%);
      padding-bottom: 10px;
    }

    .logo {
      height: 40px;
    }

    .nav {
      flex: 1;
      display: flex;
      justify-content: center;
      gap: 30px;
    }

    .nav-link {
      font-size: 1em;
      font-weight: 400;
      color: hsl(220, 13%, 13%);
      position: relative;
    }

    .nav-link:hover::after {
      content: '';
      position: absolute;
      bottom: -5px;
      left: 0;
      width: 100%;
      height: 2px;
      background-color: hsl(26, 100%, 55%);
    }

    .nav-end {
      display: flex;
      align-items: center;
      gap: 20px;
    }

    .nav-end svg {
      width: 24px;
      height: 24px;
      border-radius: 50%;
    }

    .nav-end img {
      width: 24px;
      height: 24px;
      border-radius: 50%;
    }

    /* Product details styling */
    .product-details h2 {
      font-size: 2.5em;
      font-weight: 700;
      margin: 0 0 20px;
      color: hsl(220, 13%, 13%);
    }

    .product-details p {
      font-size: 1em;
      color: hsl(219, 9%, 45%);
    }

    .product-details .price {
      display: flex;
      align-items: center;
      gap: 20px;
    }

    .product-details .price .discount {
      background-color: black;
      color: white;
      padding: 2px 8px;
      border-radius: 5px;
      font-weight: 700;
    }

    .product-details .old-price {
      color: hsl(219, 9%, 45%);
      text-decoration: line-through;
      font-size: 0.9em;
    font-weight:700;
    }

      
    .control {
      display: flex;
      align-items: center;
      gap: 20px;
      background-color: hsl(223, 64%, 98%);
      border-radius: 10px;
      padding: 10px;
      margin: 20px 0;
    }

    .control button {
      background-color: hsl(26, 100%, 55%);
      color: white;
      border: none;
      padding: 10px;
      border-radius: 5px;
      font-weight: 700;
    }

    .control input {
      width: 50px;
      text-align: center;
      border: none;
      background-color: transparent;
      color: hsl(220, 13%, 13%);
      font-size: 1.2em;
    }

    .gallery-main {
      width: 100%;
      border-radius: 10px;
    }

    .thumbnail {
      width: 20%;
      margin: 2px;
      border-radius: 10px;
      opacity: 1;
        margin-top:20px;
    }

    .thumbnail:hover, .thumbnail:focus {
      opacity: .5;
        border: 5px solid hsl(26, 100%, 55%);
    }

    /* Main layout */
    .row {
      display: flex;
      gap: 20px;
    }

    .col-md-6 {
      flex: 1;
    }
      
      #addCartBtn{
          background-color:hsl(26, 100%, 55%);
          color:black;
          padding: 18px 77px;
          border-radius: 5px;
      }

    @media (max-width: 768px) {
      .row {
        flex-direction: column;
      }
    }
      #money{
          font-size:35px;
          font-weight:700;
      }
  </style>
